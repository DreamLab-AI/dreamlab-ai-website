{
  "mcpServers": {
    "claude-flow": {
      "command": "npx",
      "args": [
        "@claude-flow/cli@latest",
        "mcp",
        "start"
      ],
      "env": {
        "CLAUDE_FLOW_MODE": "v3",
        "CLAUDE_FLOW_HOOKS_ENABLED": "true",
        "CLAUDE_FLOW_TOPOLOGY": "hierarchical-mesh",
        "CLAUDE_FLOW_MAX_AGENTS": "15",
        "CLAUDE_FLOW_MEMORY_BACKEND": "hybrid"
      },
      "autoStart": false
    },
    "ruvector": {
      "command": "bash",
      "args": [
        "/home/devuser/workspace/project2/scripts/start-ruvector.sh"
      ],
      "env": {
        "RUVECTOR_PORT": "8100",
        "RUVECTOR_DIMENSIONS": "384"
      },
      "autoStart": false
    }
  }
}